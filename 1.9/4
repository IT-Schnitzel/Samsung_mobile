public class NumberDigits {
        public static void binFraction(double n, int m)
        {
            String s = "";
            for (int i = 0; i < m; i ++)
            {
                n = n * 2;
                if (Math.floor(n) > 0)
                {
                    s = s + "1";
                    n = n - Math.floor(n);
                }
                else {
                    s = s + "0";
                }
            }
            System.out.println(s);
        }
    }
